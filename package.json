{
  "name": "remix-tailwind-starter",
  "version": "1.0.0",
  "description": "A Remix.run starter with tailwind 2 configured",
  "keywords": [
    "remix.run",
    "tailwind",
    "postcss"
  ],
  "repository": "mcansh/remix-tailwind-starter",
  "license": "MIT",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh/)",
  "main": "server.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc -b && yarn run build:css && remix build",
    "build:css": "postcss styles --base styles --dir app/ --env production",
    "postbuild:css": "node css.js",
    "dev": "concurrently \"remix run\" \"npm run dev:css\" \"tsc -b -w --preserveWatchOutput\" \"vercel dev\"",
    "dev:css": "postcss styles --base styles --dir app/ -w",
    "lint": "eslint --cache --ext .tsx,.ts,.js . --fix",
    "predeploy": "npm run build",
    "deploy": "vercel",
    "clean": "del .cache app-build build data-build public/build app/**/*.css"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@remix-run/cli": "0.8.1",
    "@remix-run/core": "0.8.1",
    "@remix-run/data": "0.8.1",
    "@remix-run/react": "0.8.1",
    "@remix-run/vercel": "0.8.1",
    "cross-env": "7.0.3",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router": "6.0.0-beta.0",
    "react-router-dom": "6.0.0-beta.0"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "3.0.1",
    "@types/node": "14.14.12",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "autoprefixer": "10.1.0",
    "concurrently": "5.3.0",
    "del-cli": "3.0.1",
    "eslint": "7.15.0",
    "glob": "7.1.6",
    "husky": "4.3.5",
    "lint-staged": "10.5.3",
    "nodemon": "2.0.6",
    "postcss": "8.2.1",
    "postcss-cli": "8.3.0",
    "prettier": "2.2.1",
    "shell-quote": "1.7.2",
    "tailwindcss": "2.0.2",
    "ts-node": "9.1.1",
    "typescript": "4.1.2"
  },
  "engines": {
    "node": ">=12"
  }
}
