{
  "name": "remix-tailwind-starter",
  "version": "1.0.0",
  "description": "A Remix.run starter with tailwind 2 configured",
  "keywords": [
    "remix.run",
    "tailwind",
    "postcss"
  ],
  "repository": "mcansh/remix-tailwind-starter",
  "license": "MIT",
  "author": "Logan McAnsh <logan@mcan.sh> (https://mcan.sh/)",
  "main": "server.js",
  "scripts": {
    "build": "tsc -b && yarn run build:css && cp app/global.css app-build/global.css && remix build",
    "build:css": "postcss styles --base styles --dir app/ --env production",
    "clean": "del .cache app-build build data-build public/build \"app/**/*.css\"",
    "dev": "cross-env NODE_ENV=development concurrently --names \"data,remix,css,vercel\" --prefix-colors \"magenta,cyan,green\" \"tsc -b -w \" \"remix run\" \"npm run dev:css\" \"vercel dev\"",
    "dev:css": "postcss styles --base styles --dir app/ -w",
    "lint": "eslint --cache --ext .tsx,.ts,.js . --fix",
    "start": "cross-env NODE_ENV=production node start.js",
    "vercel-build": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@remix-run/cli": "0.8.0",
    "@remix-run/core": "0.8.0",
    "@remix-run/data": "0.8.0",
    "@remix-run/express": "0.8.0",
    "@remix-run/react": "0.8.0",
    "cross-env": "7.0.2",
    "express": "4.17.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router": "6.0.0-beta.0",
    "react-router-dom": "6.0.0-beta.0"
  },
  "devDependencies": {
    "@mcansh/eslint-config": "3.0.1",
    "@types/express": "4.17.9",
    "@types/node": "14.14.10",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "autoprefixer": "10.0.4",
    "concurrently": "5.3.0",
    "del-cli": "3.0.1",
    "eslint": "7.14.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.2",
    "nodemon": "2.0.6",
    "postcss": "8.1.10",
    "postcss-cli": "8.3.0",
    "prettier": "2.2.1",
    "shell-quote": "1.7.2",
    "tailwindcss": "2.0.1",
    "ts-node": "9.0.0",
    "typescript": "4.1.2"
  },
  "engines": {
    "node": ">=12"
  }
}
